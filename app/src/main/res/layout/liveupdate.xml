<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001802"
    android:gravity="center">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COVID-19 CASE UPDATE"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="32dp"
        android:elevation="8dp"
        android:layout_below="@id/text"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#012403">
        <TextView
            android:id="@+id/current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get current date"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"/>

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="50dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL CONFIRMED"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="22dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/yellow"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="255dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">
            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="50dp"
                android:background="@drawable/green"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISCHARGED"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="45dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/green"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="255dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/discharged"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="50dp"
                android:background="@drawable/red"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEATHS"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="75dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/red"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="255dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/deaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="50dp"
                android:background="@drawable/blue"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW CASES"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="60dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/blue"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="255dp"
                android:padding="4dp">
                <TextView
                    android:id="@+id/newcases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/toll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NCDCToll-free Number: 080097000010"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_below="@id/cardview"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/imageyellow"
        android:layout_width="70dp"
        android:layout_height="5dp"
        android:layout_below="@id/toll"
        android:background="@drawable/yellow"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twitter/Facebook:@NCDCgov/COVID19.NCDC.GOV.NG"
        android:textColor="#fff"
        android:layout_marginTop="445dp"
        android:layout_marginLeft="110dp"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="0dp"/>


</RelativeLayout>