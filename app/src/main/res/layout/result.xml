<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COVID-19 SELF TEST"
        android:textStyle="bold"
        android:textSize="30dp"
       android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/doctor"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:text="RESULT"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:text="Your risk of having COVID-19 is"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:text="SEVERE"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#FF0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="30dp"
            android:text="Do not panic, isolate yourself from friends and family. Call: 0800-9700-0010, SMS: 08099555577 or WHATSAPP: 07087110839"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_restart"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="RESTART TEST"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/button3"
            android:layout_marginTop="590dp"
            android:layout_marginLeft="73dp" />

    </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/powered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Powered by"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="152dp"
                android:layout_marginTop="870dp"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="75dp"
                android:layout_below="@id/powered"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/logo"
                android:layout_marginBottom="15dp"
                />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
